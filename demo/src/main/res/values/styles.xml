<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="selectableItemBackgroundBorderless">?attr/selectableItemBackgroundBorderless</item>
        <item name="colorControlHighlight">@color/colorRipple</item>
    </style>

    <!--横线-->
    <style name="horizontal_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#f4f4f4</item>
    </style>

    <style name="transparentText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#00000000</item>
    </style>


    <!--点击效果-->
    <style name="RippleWhite">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:colorControlHighlight">@color/colorRipple</item>
        <item name="android:radius">50dp</item>
    </style>

    <style name="RippleWhiteRect">
        <item name="android:radius">25dp</item>
        <item name="android:background">@drawable/comm_click_bg_rect</item>
    </style>
</resources>
