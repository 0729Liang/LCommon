<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".demo.blog.eventbus.EventBusDemo">

    <Button
        android:id="@+id/demoSendEventBtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送:One" />

    <Button
        android:id="@+id/demoSendEventBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送Two"
        app:layout_constraintTop_toBottomOf="@+id/demoSendEventBtn1" />

    <Button
        android:id="@+id/demoSendEventBtn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送Three"
        app:layout_constraintTop_toBottomOf="@+id/demoSendEventBtn2" />

    <TextView
        android:id="@+id/demoDisplayText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="等待事件:"
        android:textSize="@dimen/sp20"
        app:layout_constraintTop_toBottomOf="@+id/demoSendEventBtn3" />

</android.support.constraint.ConstraintLayout>
