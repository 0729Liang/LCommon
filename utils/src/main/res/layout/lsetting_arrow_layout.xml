<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:paddingLeft="@dimen/dp15"
    android:paddingRight="@dimen/dp15"
    style="@style/RippleWhiteRect"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/larrow_title_icon"
        android:layout_width="@dimen/dp28"
        android:layout_height="@dimen/dp28"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/larrow_title_intro"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/icon_lseekbar_point" />

    <TextView
        android:id="@+id/larrow_title_intro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:singleLine="true"
        android:textColor="@color/text_black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/larrow_title_icon"
        app:layout_constraintRight_toLeftOf="@+id/larrow_number"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="描述"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/larrow_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:paddingLeft="@dimen/dp5"
        android:paddingRight="@dimen/dp5"
        android:textColor="@color/text_gray"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/larrow_title_intro"
        app:layout_constraintRight_toLeftOf="@+id/larrow_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="3000"
        android:layout_marginStart="5dp" />

    <ImageView
        android:id="@+id/larrow_icon"
        android:layout_width="7dp"
        android:layout_height="14dp"
        android:scaleType="centerInside"
        android:src="@drawable/icon_arrow_right_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/larrow_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_marginLeft="@dimen/dp15"
        android:background="#fff7f7f7"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/dp15" />

</android.support.constraint.ConstraintLayout>